subtitle.BackgroundTransparency = 1

-- è¼¸å…¥æ¡† (å…§å‡¹è³ªæ„Ÿ)
local textBox = Instance.new("TextBox", main)
textBox.Name = "KeyInput"
textBox.Size = UDim2.new(0, 280, 0, 45)
textBox.Position = UDim2.new(0.5, -140, 0.45, 0)
textBox.PlaceholderText = "è«‹è¼¸å…¥å¡å¯†..."
