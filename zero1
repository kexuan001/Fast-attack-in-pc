local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

-- 0. ç²å–é ç«¯ Key (ç¶­æŒä½ çš„ GitHub é‚è¼¯)
local raw = game:HttpGet("https://raw.githubusercontent.com/kexuan001/key/main/key.lua")
local keys = loadstring(raw)()

------------------------------------------------
-- â‘  å»ºç«‹é«˜è³ªæ„Ÿ UI
------------------------------------------------
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "Zenith_Loader_Pro"
screenGui.ResetOnSpawn = false

-- ä¸»èƒŒæ™¯æ¡† (æ·±è‰²åŠé€æ˜)
local main = Instance.new("Frame", screenGui)
main.Name = "MainFrame"
main.Size = UDim2.new(0, 340, 0, 200)
main.Position = UDim2.new(0.5, -170, 0.5, -100)
main.BackgroundColor3 = Color3.fromRGB(12, 12, 12) -- æ¥µè‡´æ·±é»‘
main.BackgroundTransparency = 0.1
main.BorderSizePixel = 0
Instance.new("UICorner", main).CornerRadius = UDim.new(0, 12)

-- ç™¼å…‰é‚Šæ¡† (Luna è³ªæ„Ÿ)
local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 1.8
stroke.Color = Color3.fromRGB(0, 170, 255)
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- æ¨™é¡Œ (åŠ å…¥æ¼¸å±¤èˆ‡è³ªæ„Ÿ)
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 60)
title.Text = "KEXUAN ZENITH"
