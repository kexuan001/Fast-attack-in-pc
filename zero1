button.AutoButtonColor = false
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)

-- æŒ‰éˆ•å‹•ç•«æ•ˆæœ
button.MouseEnter:Connect(function()
    TweenService:Create(button, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 140, 220)}):Play()
end)
button.MouseLeave:Connect(function()
    TweenService:Create(button, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 170, 255)}):Play()
end)

------------------------------------------------
-- â‘¡ é©—è­‰é‚è¼¯èˆ‡é€²å…¥è…³æœ¬
------------------------------------------------
button.MouseButton1Click:Connect(function()
    local input = textBox.Text
    
    if table.find(keys, input) then
        -- æˆåŠŸç‰¹æ•ˆ
        button.Text = "é©—è­‰æˆåŠŸ âœ…"
        TweenService:Create(button, TweenInfo.new(0.5), {BackgroundColor3 = Color3.fromRGB(46, 204, 113)}):Play()
        TweenService:Create(stroke, TweenInfo.new(0.5), {Color = Color3.fromRGB(46, 204, 113)}):Play()
        
        task.wait(1)
        
        -- æ·¡å‡ºæ•ˆæœ
        local fade = TweenService:Create(main, TweenInfo.new(0.5), {BackgroundTransparency = 1})
        fade:Play()
        for _, v in pairs(main:GetChildren()) do
            pcall(function() TweenService:Create(v, TweenInfo.new(0.5), {ImageTransparency = 1, TextTransparency = 1}):Play() end)
        end
        
        fade.Completed:Connect(function()
            screenGui:Destroy()
            
            -- ğŸš€ [åœ¨æ­¤è™•è²¼ä¸Šä½ åŸæœ¬çš„æ‰€æœ‰ä¸»è…³æœ¬åŠŸèƒ½ä»£ç¢¼]
            print("ğŸš€ Kexuan Zenith æ ¸å¿ƒå·²åŠ è¼‰")
            -- loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Luna-Interface-Suite/main/source.lua"))()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/kexuan001/Fast-attack-in-pc/refs/heads/main/zero"))()
            -- ... (ä¹‹å‰çš„ Luna ä»£ç¢¼è²¼é€™è£¡)
        end)
    else
        -- å¤±æ•—ç‰¹æ•ˆ
        button.Text = "ç„¡æ•ˆçš„å¡å¯† âŒ"
        button.BackgroundColor3 = Color3.fromRGB(231, 76, 60)
        
        -- éœ‡å‹•æ•ˆæœ
        local origPos = main.Position
        for i = 1, 4 do
            main.Position = origPos + UDim2.new(0, math.random(-5, 5), 0, 0)
            task.wait(0.05)
        end
        main.Position = origPos
        
        task.wait(1)
        button.Text = "é©—è­‰æˆæ¬Š"
        button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    end
end)
